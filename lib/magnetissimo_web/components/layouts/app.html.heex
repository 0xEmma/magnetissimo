<div class="flex flex-col min-h-screen">
  <.live_component module={MagnetissimoWeb.Header} id="header" current_user={@current_user} />

  <.flash_group flash={@flash} />

  <div class="w-full px-6 py-8 mx-auto max-w-screen-2xl">
    <%= @inner_content %>
  </div>

  <footer class="py-4 shadow-[0_-1px_0_rgba(0,0,0,.1)]">
    <div class="text-sm text-center text-neutral-500">
      <p>
        Written in Miami, by <.link
          class="text-blue-500 hover:underline"
          target="_blank"
          href="https://github.com/sergiotapia"
        >Sergio Tapia</.link>.
      </p>
      <p>
        Built with a ton of love for
        <.link
          class="text-blue-500 hover:underline"
          target="_blank"
          href="https://github.com/elixir-lang/elixir"
        >
          Elixir
        </.link>
        and <.link
          class="text-blue-500 hover:underline"
          target="_blank"
          href="https://github.com/phoenixframework/phoenix"
        >Phoenix Liveview</.link>.
      </p>
    </div>
  </footer>
</div>
